<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
        Permissions for Empathy Training app
        We keep permissions minimal for privacy and security
    -->

    <!--
        Notification permission for daily reminders (Android 13+)
        This will allow app to send daily challenge notifications
    -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!--
        Wake lock permission for scheduled notifications
        Allows WorkManager to wake device for daily reminders
    -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!--
        Network state permission (optional)
        Currently app is fully offline, but useful for future features
    -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".EmpathyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmpathyTraining"
        tools:targetApi="31">

        <!--
            Main Activity - Entry point of the application
            Uses Jetpack Compose for UI with Material 3 theme
            Handles navigation between all app screens
        -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.EmpathyTraining">

            <!-- Intent filter to make this the launcher activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
            Work Manager for background tasks
            Used for scheduling daily challenge notifications
            No additional configuration needed - WorkManager handles everything
        -->

        <!--
            Notification channels will be created programmatically
            This ensures compatibility across different Android versions
        -->

    </application>

    <!--
        Declare that app works without network connection
        This optimizes app for offline usage
    -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />

</manifest>